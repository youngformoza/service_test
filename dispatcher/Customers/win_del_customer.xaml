<Window x:Class="dispatcher.Customers.win_del_customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dispatcher.Customers"
        mc:Ignorable="d"
        Title="win_del_customer" Height="250" Width="250">
    <Grid>
        <Label Content="Введите ID клиента" HorizontalAlignment="Left" Margin="38,25,0,0" VerticalAlignment="Top" Height="27" Width="174"/>
        <TextBox x:Name="customer_id" HorizontalAlignment="Left" Margin="38,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Height="23"/>
        <Button x:Name="del_customer" Content="Delete" HorizontalAlignment="Left" Margin="72,160,0,0" VerticalAlignment="Top" Height="27" Width="103" Click="del_customer_Click"/>

    </Grid>
</Window>
